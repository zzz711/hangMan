<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >


    <EditText android:id="@+id/enteredWordEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:inputType="text"
        />

    <Button android:id="@+id/setWordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Word"
        android:layout_alignRight="@id/enteredWordEditText"
        android:layout_below="@id/enteredWordEditText"
        android:onClick="setWord"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userText"
        android:layout_below="@+id/setWordButton"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/setWordButton"
        android:hint="Username"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Username"
        android:id="@+id/userNameButton"
        android:layout_below="@+id/userText"
        android:layout_alignRight="@+id/userText"
        android:onClick="setName"
        />
    
</RelativeLayout>
